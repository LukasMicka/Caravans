{% extends 'base_admin.html.twig' %}

{% block title %}Caravan index{% endblock %}

{% block body %}
    <h1>Caravan index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Color</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for caravan in caravans %}
            <tr>
                <td>{{ caravan.id }}</td>
                <td>{{ caravan.name }}</td>
                <td>{{ caravan.color }}</td>
                <td>
                    <a href="{{ path('caravan_show', {'id': caravan.id}) }}">show</a>
                    <a href="{{ path('caravan_edit', {'id': caravan.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('caravan_new') }}">Create new</a>
{% endblock %}
